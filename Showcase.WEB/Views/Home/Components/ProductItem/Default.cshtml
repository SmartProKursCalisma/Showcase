@model Product

<div class="col mb-5">
    <div class="card h-100">
        <!-- Sale badge-->
        @if (Model.Sale)
        {
            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
        }
        <!-- Product image-->
        @* src="https://picsum.photos/450/300?random=1" *@
        <img class="card-img-top" src="https://picsum.photos/450/300?random=@(Model.Id)" alt="..." />
        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder">@Model.Title</h5>
                <!-- Product reviews-->
                <div class="d-flex justify-content-center small text-warning mb-2">
                    @for (int i = 0; i < Model.Rating; i++)
                    {
                        <div class="bi-star-fill"></div>
                    }

                </div>
                <!-- Product price-->
                @if (Model.Sale)
                {
                    <span class="text-muted text-decoration-line-through">₺@(Model.Price + Model.Price * 25 / 100)</span>
                }
                ₺@Model.Price
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Sepete Ekle</a></div>
        </div>
    </div>
</div>

